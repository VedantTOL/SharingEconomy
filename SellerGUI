        private static class addButtonFrame extends JFrame {
        public String storeName;
            private JTextField nameStoreQuestion;
            private JTextField productQuestion;

            public addButtonFrame(String title) {
                super(title);
                nameStoreQuestion = new JTextField(20);
                productQuestion = new JPasswordField(20);
